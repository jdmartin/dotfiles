{
  "coc.preferences.formatOnSave": true,
  "diagnostic.virtualText": true,
  "diagnostic.messageTarget": "echo",
  "diagnostic.displayByAle": false,
  "diagnostic.autoRefresh": true,
  "suggest.triggerCompletionWait": 5,
  {{- if lookPath "php" }}
  "languageserver": {
    "intelephense": {
      "command": "intelephense",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "php"
      ],
      "globalStoragePath": "~/.cache/intelephense",
      "initializationOptions": {
        "storagePath": "/tmp/intelephense"
      },
      "rootPatterns": [
        "composer.json",
        ".git/"
      ],
      "trace.server": "verbose",
      "enable": true
    },
    {{- end }}
    {{- if lookPath "go" }}
    "go": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        ".git"
      ],
      "trace.server": "verbose",
      "filetypes": [
        "go"
      ],
      "initializationOptions": {
        "usePlaceholders": true,
        "completeUnimported": true,
        "diagnostics": true
      },
      "settings": {
        "gopls": {
          "analyses": {
            "unusedparams": true,
            "shadow": true
          },
          "staticcheck": true
        }
      }
    },
    {{- end }}
    {{- if lookPath "python3" }}
    "python": {
      "command": "ruff",
      "filetypes": [
        "py"
      ],
      "settings": {
        "python": {
          "pythonPath": "python3",
          "analysis.autoImportCompletions": true,
          "formatting.provider": "ruff",
          "linting.enabled": true,
          "linting.ruffEnabled": true,
          "sortImports": true,
          "sortImports.path": "ruff",
          "ruff.args": [
            "--disable-rule=E302"
          ],
          "ruff.enable": true
        }
      }
    },
    {{- end }}
    {{- if lookPath "rubocop" }}
    "rubocop": {
      "command": "rubocop",
      "args": ["--lsp"],
      "filetypes": ["ruby"]
    },
    {{- end }}
    {{- if lookPath "node" }}
    "tsserver": {
      "module": "typescript-language-server",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "typescript",
        "javascript",
        "javascriptreact",
        "typescriptreact"
      ],
      "rootPatterns": [
        "package.json",
        "tsconfig.json",
        "jsconfig.json",
        ".git"
      ],
      "settings": {
        "javascript": {
          "format.enable": true,
          "suggest.autoImports": true
        },
        "typescript": {
          "format.enable": true,
          "suggest.autoImports": true
        }
      }
    },
    {{- end }}
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ]
    }
  }
}

